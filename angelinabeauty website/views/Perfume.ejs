<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Perfume Products</title>
  <link rel="stylesheet" type="text/css" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <script src="/js/AJAXforSearch.js" src="/js/cart.js" defer></script>
  <script src="/js/AJAXforSearch.js" defer></script>
</head>
<body>

  <section id="header" class="header">
    <div class="logo">
      <img src="/images/Angelina_transparent2.png" alt="Angelina Logo" />
    </div>
    <nav class="navbar">
      <a href="/homepage">Home</a>
      <div class="dropdown">
        <a href="/shop" class="dropbtn">Shop</a>
        <div class="dropdown-content">
          <a href="/facecare">Facecare</a>
          <a href="/bodycare">Bodycare</a>
          <a href="/makeup">Makeup</a>
          <a href="/Perfume">Perfume</a>
          <a href="/shop">Shop All</a>
        </div>
      </div>
      <a href="/aboutus">About Us</a>
    </nav>
    <div class="header-right">
         <div class="search-box">
                <input type="text" id="searchInput" placeholder="Search product..." />
                <button id="searchBtn"><i class="fas fa-search"></i></button>
            </div>
      <div class="icons">
        <a href="/shoppingCart" class="fa-solid fa-cart-shopping"></a>
        <a href="/login" class="fa-regular fa-user"></a>
      </div>
    </div>
  </section>

  <div class="products">
    <div class="container">
      <div class="product-items" id="productItems">
        <% if (products.length === 0) { %>
          <p>No perfume products found.</p>
        <% } else { %>
          <% products.forEach(product => { %>
            <div class="product">
              <div class="product-content">
                <div class="product-img">
                  <img src="/images/<%= product.image %>" height="200" alt="product image">
                </div>
                <div class="product-btns">
                  <form action="/cart/add/<%= product._id %>" method="POST">
                    <button type="submit" class="btn-cart"> add to cart
                      <span><i class="fas fa-plus"></i></span>
                    </button>
                  </form>
                </div>
              </div>
              <div class="product-info">
                <a href="/product/<%= product._id %>" class="product-name"><%= product.name %></a>
                <p class="product-price">$ <%= product.price.toFixed(2) %></p>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>
  </div>

 <%- include('partials/footer') %>

  </section>

</body>
</html>
