<html lang="en">

<head>
    <style>
        body {
            background-color: white;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            color: #e91e63; /* Pink */
            margin-top: 40px;
        }

        form {
            background-color: #fce4ec; /* Light pink background */
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            display: flex;
            flex-direction: column;
            gap: 15px;
            width: 300px;
        }

        input[type="password"] {
            padding: 10px;
            border: 1px solid #e91e63;
            border-radius: 5px;
            font-size: 14px;
        }

        input[type="password"]:focus {
            outline: none;
            border-color: #ad1457;
            box-shadow: 0 0 5px #f06292;
        }

        input[type="submit"] {
            background-color: #e91e63;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 5px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        input[type="submit"]:hover {
            background-color: #d81b60;
        }
    </style>
</head>

<body>
    <%- include("./partials/nav.ejs") %>
    <div>
        <h1>Edit Profile</h1>
    </div>
    <div>
        <form action="/user/editProfile" method="post">
            New Password:
            <input type="password" name="pw" required placeholder="Password">
            <input type="submit" name="submit" value="Update Password">
        </form>
    </div>
</body>

</html>
