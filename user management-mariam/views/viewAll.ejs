<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - All Users</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      height: 100%;
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: #f8f9fa;
      color: #333;
      line-height: 1.6;
    }

    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    .main-content {
      flex: 1;
      padding: 40px 20px;
      display: flex;
      justify-content: center;
      align-items: flex-start;
    }

    .page-header {
      text-align: center;
      margin-bottom: 40px;
      animation: fadeInDown 0.8s ease-out;
    }

    h2 {
      font-size: 2.5rem;
      font-weight: 700;
      color: #000;
      margin-bottom: 10px;
    }

    .subtitle {
      color: #666;
      font-size: 1.1rem;
      font-weight: 300;
    }

    .container {
      max-width: 1200px;
      width: 100%;
      background: white;
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      animation: fadeInUp 0.8s ease-out;
      border: 1px solid #f0f0f0;
    }

    .stats-bar {
      background: linear-gradient(135deg, #ff69b4, #ff1493);
      padding: 25px 30px;
      color: white;
      display: flex;
      justify-content: space-around;
      align-items: center;
    }

    .stats-item {
      text-align: center;
    }

    .stats-number {
      font-size: 2.2rem;
      font-weight: 700;
      margin-bottom: 5px;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    .stats-label {
      font-size: 0.9rem;
      opacity: 0.95;
      font-weight: 500;
    }

    .table-container {
      padding: 30px;
      overflow-x: auto;
    }

    .users-table {
      width: 100%;
      border-collapse: collapse;
      background: white;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .users-table th {
      background: #000;
      color: white;
      padding: 20px 15px;
      text-align: left;
      font-weight: 600;
      font-size: 0.95rem;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      border: none;
    }

    .users-table td {
      padding: 18px 15px;
      border-bottom: 1px solid #f5f5f5;
      font-size: 0.95rem;
      vertical-align: middle;
    }

    .users-table tr:hover {
      background: rgba(255, 105, 180, 0.05);
      transform: translateY(-1px);
      transition: all 0.3s ease;
    }

    .user-name {
      font-weight: 600;
      color: #000;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .user-avatar {
      width: 42px;
      height: 42px;
      border-radius: 50%;
      background: linear-gradient(135deg, #ff69b4, #ff1493);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-weight: 600;
      font-size: 0.9rem;
      box-shadow: 0 3px 10px rgba(255, 105, 180, 0.3);
    }

    .position-badge {
      display: inline-block;
      padding: 8px 16px;
      border-radius: 25px;
      font-size: 0.8rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      border: 2px solid;
    }

    .position-admin {
      background: #000;
      color: white;
      border-color: #000;
    }

    .position-client {
      background: white;
      color: #ff69b4;
      border-color: #ff69b4;
    }

    .action-buttons {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
    }

    .btn {
      padding: 10px 18px;
      border-radius: 8px;
      text-decoration: none;
      font-size: 0.85rem;
      font-weight: 600;
      transition: all 0.3s ease;
      border: 2px solid;
      cursor: pointer;
      display: inline-flex;
      align-items: center;
      gap: 6px;
      text-transform: uppercase;
      letter-spacing: 0.3px;
    }

    .btn-view {
        background: #000;
      color: white;
      border-color: #000;
    }

    .btn-view:hover {
  background: #ff1493;
      color: white;
      border-color: #ff1493;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(255, 20, 147, 0.3);
    }

    .btn-toggle {
        background: #000;
      color: white;
      border-color: #000;
    }

    .btn-toggle:hover {
     background: #ff1493;
      color: white;
      border-color: #ff1493;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(255, 20, 147, 0.3);
    }

    .btn-delete {
      background: #000;
      color: white;
      border-color: #000;
    }

    .btn-delete:hover {
      background: #ff1493;
      color: white;
      border-color: #ff1493;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(255, 20, 147, 0.3);
    }

    .empty-state {
      text-align: center;
      padding: 80px 30px;
      color: #666;
    }

    .empty-icon {
      font-size: 4rem;
      margin-bottom: 20px;
      color: #ff69b4;
      opacity: 0.6;
    }

    .empty-title {
      font-size: 1.8rem;
      font-weight: 700;
      margin-bottom: 15px;
      color: #000;
    }

    .empty-message {
      font-size: 1.1rem;
      color: #666;
    }

    .add-user-btn {
      background: linear-gradient(135deg, #ff69b4, #ff1493);
      color: white;
      border: none;
      padding: 15px 30px;
      border-radius: 50px;
      font-weight: 600;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      margin-top: 20px;
      font-size: 1rem;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(255, 105, 180, 0.3);
    }

    .add-user-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 25px rgba(255, 105, 180, 0.4);
    }

    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (max-width: 768px) {
      .main-content {
        padding: 20px 10px;
      }

      h2 {
        font-size: 2rem;
      }

      .stats-bar {
        flex-direction: column;
        gap: 20px;
        text-align: center;
      }

      .users-table {
        font-size: 0.9rem;
      }

      .action-buttons {
        flex-direction: column;
      }

      .btn {
        width: 100%;
        justify-content: center;
      }

      .user-name {
        flex-direction: column;
        text-align: center;
        gap: 8px;
      }
    }

    /* Custom scrollbar */
    ::-webkit-scrollbar {
      width: 8px;
    }

    ::-webkit-scrollbar-track {
      background: #f8f9fa;
      border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb {
      background: linear-gradient(135deg, #ff69b4, #ff1493);
      border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: linear-gradient(135deg, #ff1493, #dc143c);
    }

    /* Additional pink accent elements */
    .table-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, #ff69b4, #ff1493, #ff69b4);
    }

    .container {
      position: relative;
    }

    .users-table tbody tr:nth-child(even) {
      background: rgba(248, 249, 250, 0.5);
    }

    /* Hover effect for the entire container */
    .container:hover {
      box-shadow: 0 15px 50px rgba(255, 105, 180, 0.1);
      transition: all 0.3s ease;
    }
  </style>
</head>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="main-content">
    <div class="container">
      <div class="page-header">
        <h2>User Management</h2>
        <p class="subtitle">Manage all system users and their permissions</p>
      </div>

      <% if (users.length > 0) { %>
        <div class="stats-bar">
          <div class="stats-item">
            <div class="stats-number"><%= users.length %></div>
            <div class="stats-label">Total Users</div>
          </div>
          <div class="stats-item">
            <div class="stats-number"><%= users.filter(u => u.Type === 'admin').length %></div>
            <div class="stats-label">Admins</div>
          </div>
          <div class="stats-item">
            <div class="stats-number"><%= users.filter(u => u.Type === 'client').length %></div>
            <div class="stats-label">Clients</div>
          </div>
        </div>

        <div class="table-container">
          <table class="users-table">
            <thead>
              <tr>
                <th>User</th>
                <th>Position</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(user => { %>
                <tr>
                  <td>
                    <div class="user-name">
                      <div class="user-avatar">
                        <%= user.UserName.charAt(0).toUpperCase() %>
                      </div>
                      <%= user.UserName %>
                    </div>
                  </td>
                  <td>
                    <span class="position-badge position-<%= user.Type %>">
                      <%= user.Type %>
                    </span>
                  </td>
                  <td>
                    <div class="action-buttons">
                      <a href="/admin/user/<%= user.id %>" class="btn btn-view">
                        üëÅ View
                      </a>
                      <% if (user.Type === 'client') { %>
                        <a href="/admin/toAdmin/<%= user.id %>" class="btn btn-toggle">
                          ‚¨Ü Make Admin
                        </a>
                      <% } else { %>
                        <a href="/admin/toClient/<%= user.id %>" class="btn btn-toggle">
                          ‚¨á Make Client
                        </a>
                      <% } %>
                      <a href="/admin/delete/<%= user.Image %>/<%= user.id %>" class="btn btn-delete" 
                         onclick="return confirm('Are you sure you want to delete this user?')">
                        üóë Delete
                      </a>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="empty-state">
          <div class="empty-icon">üë•</div>
          <div class="empty-title">No Users Found</div>
          <div class="empty-message">There are no users to display at this time.</div>
          <a href="/admin/add-user" class="add-user-btn">
            ‚ûï Add New User
          </a>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    // Add smooth animations on page load
    document.addEventListener('DOMContentLoaded', function() {
      const rows = document.querySelectorAll('.users-table tbody tr');
      rows.forEach((row, index) => {
        row.style.animationDelay = `${index * 0.1}s`;
        row.style.animation = 'fadeInUp 0.6s ease-out forwards';
        row.style.opacity = '0';
      });
    });

    // Add confirmation for delete actions
    document.querySelectorAll('.btn-delete').forEach(button => {
      button.addEventListener('click', function(e) {
        if (!confirm('Are you sure you want to delete this user? This action cannot be undone.')) {
          e.preventDefault();
        }
      });
    });
  </script>
</body>
</html>